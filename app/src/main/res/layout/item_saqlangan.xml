            android:fontFamily="@font/albert_regular"
            android:padding="10dp"
            android:text="200 m2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/fasl"
            android:layout_width="match_parent"
